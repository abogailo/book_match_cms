<%= render :partial => 'layouts/error_handling', :locals => {:object => @genre} %>
<div class="genres new">
  <h2>Create genre</h2>

  <%= form_for(@genre) do |f| %>

    <table summary="genre form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
    </table>
    
    <div class="form-buttons">
      <%= f.submit("Create genre") %>
    </div>

  <% end %>
</div>