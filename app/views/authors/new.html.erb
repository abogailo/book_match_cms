<%= render :partial => 'layouts/error_handling', :locals => {:object => @author} %>

<div class="books new">
  <h2>Create author</h2>

  <%= form_for(@author) do |f| %>

    <table summary="author form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr> 
    </table>
    
    <div class="form-buttons">
      <%= f.submit("Create Author") %>
    </div>

  <% end %>
</div>