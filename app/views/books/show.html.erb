


<div>
  <h2>Show book</h2>

  <table class="table borderless">
    <tr>
      <th>Name</th>
      <td><%= @book.title %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @book.description %></td>
    </tr>
    <tr>
      <th>Author</th>
      <td><%= @book.author_name%></td>
    </tr>
    <tr>
      <th>Quantity</th>
      <td><%= @book.quantity %></td>
    </tr>
    <tr>
      <th>Condition</th>
      <td><%= @book.condition %></td>
    </tr>
    <tr>
      <th>Price</th>
      <td><%= @book.price %></td>
    </tr>
    <tr>
      <th>Year Published</th>
      <td><%= @book.year_published %></td>
    </tr>
    <tr>
      <th>Admin Id</th>
      <td><%= @book.admin_id %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @book.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @book.updated_at %></td>
    </tr>
  </table>
</div>
</br>
<%= link_to("Add Review", new_review_path(book_id: @book.id)) %>
<div>
<h2><%= @book.title %>'s Review</h2>
  <table class="table borderless">
    <tr class = "header">
    <th>Rating</th>
    <th>Review</th>
    </tr>

    <% @book.reviews.recent(2).each do |r| %>
    <tr>
    <td>
      <%= (r.rating).times do %> 
        <span class="glyphicon glyphicon-star" style="color:orange"></span> 
      <% end %>
    </td>
    <td><%= r.review%></td>
    </tr>
    <% end %>
  </table>
</div>