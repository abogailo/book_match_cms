
<div class= "books index">
    <h2> Get a Book </h2>

    <%= link_to("Show authors", authors_path) %>
<table class="listing" summary="Book list">
  <tr class="header">
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th>Quantity</th>
    <th>Condition</th>
    <th>Price</th>
    <th>Year_published</th>
    <th>Created by </th>

  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.description%></td>
    <td><%= book.author_id %></td>
    <td><%= book.quantity %></td>
    <td><%= book.condition %></td>
    <td><%= book.price %></td>
    <td><%= book.year_published%></td>
    <td><%= book.admin_id%></td>
    
    <td class="actions">
      <%= link_to("Show", book_path(book), :class => 'action show') %>
      <%= link_to("Edit", edit_book_path(book), :class => 'action edit') unless !current_user.admin?%>
      <%= link_to("Delete", book_path(book), :class => 'action delete') unless !current_user.admin?%>
    </td>
  </tr>
  <% end %>
</table>
</div>