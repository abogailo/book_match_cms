

  <%= form_for(@book) do |f| %>

    <table summary="book form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= f.text_field(:description) %></td>
      </tr>
      <tr>
        <th>Author Full Name</th>
        <td><%= f.text_field(:author_id) %></td>
      </tr>
      <tr>
        <th>Quantity</th>
        <td><%= f.text_field(:quantity) %></td>
      </tr>
      <tr>
        <th>Condition</th>
        <td><%= f.text_field(:condition) %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= f.text_field(:price) %></td>
      </tr>
      <tr>
        <th>Year Published</th>
        <td><%= f.text_field(:year_published) %></td>
      </tr>
      <tr>
      <td><%= f.hidden_field :admin_id, value: current_user.id %></td>
    </tr>
    </table>

    <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %>
    <%= f.fields_for :genres, @book.genres.build do |genres_fields| %>
      <%= genres_fields.text_field :name %>
    <% end %>

    <div class="form-buttons">
      <%= f.submit("Continue") %>
    </div>

  <% end %>