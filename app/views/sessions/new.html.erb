<section class= "bookapp">
    <header class= "header">
    <div class="container text-center">
  <h1>Sign In</h1>
</div>

<div class="container">
  <%= form_tag sessions_path do %>
    <div class="form-group row">
      <%= label_tag :email, nil, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= text_field_tag :email, nil, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= label_tag :password, nil, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= password_field_tag :password, nil, :class => "form-control" %>
      </div>
    </div>
    <div class="col text-center">
      <%= submit_tag "Sign In", :class => "btn btn-primary" %>
    </div>
  <% end %>
  <br>
</div>

    </header>
    <div class= "github sign-in", align="center">
    <h5> <%= link_to "Login with your Github account", "/auth/github" %> </h5>
    </div>

    <div class= "sign up", align="center">
    <%= submit_tag "Sign Up", :class => "btn btn-success" %>
    </div>
</section>